{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "openlab-modules/module-list",
    "title": "All Modules List",
    "category": "openlab-modules",
    "icon": "menu",
    "description": "This block is dynamically generated to display a list of all of the published Modules on your site. To change the order of the modules, drag and drop using the icon.",
    "supports": {
      "anchor": true,
      "color": {
        "text": true,
        "background": true,
        "link": true
      },
      "typography": {
        "fontSize": true
      },
      "spacing": {
        "margin": true,
        "padding": true,
        "minHeight": true
      },
      "shadow": true
    },
    "attributes": {
      "cardBackgroundColor": {
        "type": "string",
        "default": "#f5f5f5"
      },
      "orderedIds": {
        "type": "array",
        "default": []
      },
      "showModuleAuthor": {
        "type": "boolean",
        "default": true
      },
      "showModuleDescription": {
        "type": "boolean",
        "default": true
      },
      "showModuleImage": {
        "type": "boolean",
        "default": true
      }
    },
    "styles": [
      {
        "name": "text-list",
        "label": "Text List",
        "isDefault": true
      },
      {
        "name": "image-list",
        "label": "Image List"
      },
      {
        "name": "image-grid",
        "label": "Image Grid"
      }
    ],
    "textdomain": "openlab-modules",
    "editorScript": {
      "handle": "openlab-modules-module-list-editor-script",
      "path": "index.js",
      "module": true
    },
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
